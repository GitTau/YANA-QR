<body>
  <div class="card">
    <h1>Rider Sign In</h1>
    <div class="muted">Enter your registered email to continue. If you don’t have an account, sign up first.</div>

    <!-- Email -->
    <label>Email</label>
    <input id="signinEmail" type="email" placeholder="Enter email"/>

    <!-- Sign In Button -->
    <button class="btn" id="signinBtn">Sign In</button>
    <button class="btn secondary" onclick="window.location.href='rider-signup.html'">New user? Sign Up</button>
  </div>

  <!-- Firebase SDK -->
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-firestore.js"></script>
  <script src="firebase-config.js"></script>

  <script>
    document.getElementById('signinBtn').addEventListener('click', async () => {
      try {
        const email = (document.getElementById('signinEmail').value||'').trim();
        if(!email){
          alert('Please enter your email.');
          return;
        }

        const docRef = db.collection('users').doc(email);
        const snap = await docRef.get();

        if(!snap.exists){
          alert('No rider found with this email. Please sign up first.');
          window.location.href = 'rider-signup.html';
          return;
        }

        const data = snap.data() || {};
        if(data.status === 'approved'){
          // Redirect to scanner/dashboard
          window.location.href = 'scanner.html?email=' + encodeURIComponent(email);
        } else if(data.status === 'pending'){
          alert('Your registration is still pending admin approval.');
        } else if(data.status === 'rejected'){
          alert('Your registration has been rejected. Contact admin.');
        } else {
          alert('Unknown status. Please contact support.');
        }

      } catch(err){
        console.error(err);
        alert('Sign in error: ' + err.message);
      }
    });
  </script>
</body>
