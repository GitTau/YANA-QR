<body>
  <div class="card">
    <h1>Rider Sign Up</h1>
    <div class="muted">Fill in your details. If you're already registered, you will be prompted to sign in instead.</div>

    <!-- Name -->
    <label>Name</label>
    <input id="regName" type="text" placeholder="Enter full name"/>

    <!-- Email -->
    <label>Email</label>
    <input id="regEmail" type="email" placeholder="Enter email"/>

    <!-- Phone -->
    <label>Phone Number</label>
    <input id="regPhone" type="text" placeholder="Enter phone number"/>

    <!-- Vendor -->
    <label>Current Vendor Name (optional)</label>
    <input id="regVendor" type="text" placeholder="Enter vendor name"/>

    <!-- Business Partners -->
    <label>Business Partners (select multiple)</label>
    <select id="regPartners" multiple>
      <option value="BigBasket Daily">BigBasket Daily</option>
      <option value="Zomato">Zomato</option>
      <option value="Swiggy">Swiggy</option>
      <option value="Swiggy Instamart">Swiggy Instamart</option>
      <option value="BlinkIt">BlinkIt</option>
      <option value="Jio Instamart">Jio Instamart</option>
    </select>

    <!-- Aadhaar -->
    <label>Aadhar Number</label>
    <input id="regAadhar" type="text" placeholder="Enter Aadhaar number"/>

    <!-- Submit -->
    <button class="btn" id="submitRegistration">Sign Up</button>
    <button class="btn secondary" onclick="window.location.href='rider-signin.html'">Already registered? Sign In</button>
  </div>

  <!-- Firebase SDK -->
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-firestore.js"></script>

  <!-- Config -->
  <script src="firebase-config.js"></script>

  <script>
    const btn = document.getElementById('submitRegistration');
    btn.addEventListener('click', async () => {
      try {
        const name = (document.getElementById('regName').value||'').trim();
        const email = (document.getElementById('regEmail').value||'').trim();
        const phone = (document.getElementById('regPhone').value||'').trim();
        const vendor = (document.getElementById('regVendor').value||'').trim();
        const partners = Array.from(document.getElementById('regPartners').selectedOptions).map(o=>o.value);
        const aadhar = (document.getElementById('regAadhar').value||'').trim();

        if(!name || !email || !phone || !aadhar){
          alert('Please enter Name, Email, Phone, and Aadhar.');
          return;
        }

        const docRef = db.collection('users').doc(email);
        const snap = await docRef.get();
        if(snap.exists){
          alert('Rider already present in database. Please sign in.');
          window.location.href = 'rider-signin.html';
          return;
        }

        await docRef.set({
          name, email, phone, vendor, partners, aadhar,
          status: 'pending',
          createdAt: firebase.firestore.FieldValue.serverTimestamp()
        });

        alert('Registration successful. Please wait for admin approval.');
        window.location.href = 'homepage.html';
      } catch (err) {
        console.error(err);
        alert('Error during registration: ' + err.message);
      }
    });
  </script>
